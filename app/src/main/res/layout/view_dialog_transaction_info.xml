<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_custom_dialog">


    <TextView
        style="@style/TextTitleComfortaa.Purple"
        android:text="@string/transaction_info"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/bg_frame_grey">

        <TextView
            android:id="@+id/tv_transaction_amount"
            style="@style/TextBase"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_transaction_concept"
            style="@style/TextBase"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"/>

    </LinearLayout>


    <TextView
        android:id="@+id/btn_close"
        style="@style/TextBase"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/close_arrow"
        android:background="@drawable/background_pressed_common"/>

</LinearLayout>